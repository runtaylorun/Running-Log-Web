{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-boolean-value": 2,
        "react/jsx-tag-spacing": 2,
        "react/jsx-sort-default-props": 2,
        "react/jsx-closing-tag-location": 2,
        "react/jsx-closing-bracket-location": 2
    }
}